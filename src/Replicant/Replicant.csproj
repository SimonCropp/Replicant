    <TargetFrameworks>net7.0;net8.0</TargetFrameworks>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Polyfill" Version="4.9.0" PrivateAssets="all" />
    <PackageReference Include="ProjectDefaults" Version="1.0.126" PrivateAssets="all" />
    <PackageReference Include="System.Net.Http" Version="4.3.4" Condition="$(TargetFramework) == 'net48'" />
    <PackageReference Include="System.Text.Json" Version="8.0.3" Condition="$(TargetFramework) == 'net48'" />
  </ItemGroup>
</Project>